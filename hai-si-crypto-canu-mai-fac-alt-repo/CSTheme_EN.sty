\mode<presentation>

\newif\ifbeamer@secheader
\beamer@secheaderfalse

\ProcessOptionsBeamer

\useoutertheme[footline=date]{smoothbars}
\makeatletter 


\newcommand{\frameofframes}{/}
\newcommand{\setframeofframes}[1]{\renewcommand{\frameofframes}{#1}}
\setbeamertemplate{headline}{%
\leavevmode%
  \hbox{%
  \setbeamercolor{coloredboxstuff}{fg=white,bg=blueCS}
    \begin{beamercolorbox}[wd=\paperwidth,ht=8ex,dp=2ex,leftskip=.3cm,rightskip=.3cm plus1fil]{coloredboxstuff}%
     {\usebeamerfont{date in head/foot}\large\Facultate}\hfill \break
     {\usebeamerfont{date in head/foot}\small\Universitate}%
    \end{beamercolorbox}%
  }
}
\setbeamertemplate{footline} 
  {%
   \begin{beamercolorbox}[ht=2.5ex,dp=1.125ex,leftskip=.3cm,rightskip=.3cm plus1fil]{date in head/foot}%
      {\usebeamerfont{date in head/foot}\DataPrezentarii}%
      \hfill%
      {\usebeamerfont{frame number}\usebeamercolor[fg]{frame number}\insertframenumber~\frameofframes~\inserttotalframenumber}
    \end{beamercolorbox}%
  }
\makeatother

\useinnertheme{circles}

\xdefinecolor{blueCS}{RGB}{0,65,116}  
\xdefinecolor{yellowCS}{RGB}{245,225,190}  

\setbeamercolor{footline}{bg=white,fg=blueCS}
